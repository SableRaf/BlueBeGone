{
    "manifest_version": 3,
    "name": "BlueBeGone",
    "version": "1.0",
    "description": "Hides the useless 'Twitter Blue' and 'Verified Org...' sidebar links.",
    "permissions": ["tabs", "scripting", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://twitter.com/*"
        ],
        "js": [
          "contentScript.js"
        ],
        "run_at": "document_end"
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }